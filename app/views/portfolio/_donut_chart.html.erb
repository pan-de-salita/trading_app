<div class="py-4 px-4" >
  <h1>My Portfolio</h1>
    <% if @stock_shares.any? %>
        <div class="row w-100 justify-content-around align-items-center">
            <div class="col-12">
                    <%= donut_chart @stock_shares,
                            options: {
                                color: [ "#51cb20", '#66999B', '#FF1053', '#fac858', '#1F1F1F', '#73c0de', '#3ba272', '#fc8452', '#9a60b4']
                            }
                    %>
            </div>
        </div>
    <% else %>
        <span>Your Portfolio is currently empty</span>
    <% end %>
</div>

