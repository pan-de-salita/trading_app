<div class="container" >
  <h1>My Portfolio</h1>
    <div class="row">
        <div class="col-6">
            <%= donut_chart @stock_shares %>
        </div>
        <div class="col-6">
            <% @stocks.uniq(&:ticker).each do |stock| %>
                <li>
                    <%= link_to portfolio_path(id: stock.id) do %>
                    <strong>Company Name:</strong>
                    <%= stock.company_name %>
                    <% end %>
                </li>
            <% end %>
        </div>
    </div>
</div>

