<div class="container" >
  <h1>My Portfolio</h1>
    <div class="row">
        <div class="col-6">
            <%= donut_chart @stock_shares,
                    options: {
                        color: [ "#51cb20", '#66999B', '#FF1053', '#fac858', '#1F1F1F', '#73c0de', '#3ba272', '#fc8452', '#9a60b4']
                    }
            %>
        </div>
        <div class="col-6">
            <% @stocks.uniq(&:ticker).each do |stock| %>
                <li>
                    <%= link_to portfolio_path(id: stock.id) do %>
                    <strong>Company Name:</strong>
                    <%= stock.company_name %>
                    <% end %>
                </li>
            <% end %>
        </div>
    </div>
</div>

