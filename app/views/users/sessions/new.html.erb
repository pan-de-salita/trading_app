<div class="card my-4">
  <div class="card-body">
    <h2 class="card-title text-dark text-center mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-group" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me, class: "form-check-input mx-auto" %>
          <%= f.label :remember_me, class: "form-check-label ml-3" %>
        </div>
      <% end %>

      <div class="form-group text-center">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

  
  </div>
</div>

  <div class="mx-4"><%= render "users/shared/links" %></div>