<div class="card my-4">
  <div class="card-body">
        <h2 class="card-title text-dark text-center mb-4">Create User</h2>
        <%= form_with(model: [:admin, @user], local: true, class: "form-group") do |form| %>
          <div class="form-group">
            <% form.label :email, "Email", class: "form-label" %>
            <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
          </div>
          <div class="form-group">
            <% form.label :password, "Password", class: "form-label" %>
            <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
          </div>
          <div class="form-group">
            <% form.label :password_confirmation, "Confirm Password", class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
          </div>
          <div class="form-group">
            <% form.label :role, "Role", class: "form-label" %>
            <%= form.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: "form-control", placeholder: "Select role" %>
          </div>
          <div class="form-group text-center">
            <%= form.submit "Create User", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>    
    </div>
  </div>

